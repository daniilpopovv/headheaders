{% extends 'base.html.twig' %}

{% block title %}{{ resume }}{% endblock %}

{% block body %}

    <div class="p-3 mb-3 container-sm detail-view-container w-50">
        <div class="d-flex justify-content-between mb-3 align-items-center">
            <h1 class="">{{ resume.owner.fullName }}</h1>

            {% if role == 'seeker' and resume.owner.username == app.user.username %}
                <a class="btn" href="{{ path('edit_resume', { id: resume.id }) }}">Редактировать</a>
            {% endif %}
        </div>

        {% if isReply %}
            <p class="fw-bold">Соискатель откликнулся на вашу вакансию! Почта для связи: <a href="mailto:{{ resume.owner.email }}">{{ resume.owner.email }}</a></p>
        {% endif %}

        <p class="card-text">{{ resume.description|nl2br }}</p>
        <hr/>
        <div class="d-flex justify-content-between">
            <h5 class="card-title pb-2">{{ resume.specialization }}</h5>
            <p class="m-0 salary">{{ resume.salary|number_format(thousandSep = ' ') }} руб.</p>
        </div>

        <div class="d-flex flex-wrap mt-2">
            {% for skill in resume.skills %}
                <p class="skill p-1 px-3 me-3"> {{ skill }}</p>
            {% endfor %}
        </div>

        {% if role == 'recruiter' %}
            {% if isInvite %}
                <p class="fw-bold">Вы уже отправили приглашение ✓</p>
            {% else %}
                <div class="form-block w-100">
                    {{ form_start(resume_form) }}
                    <div class="d-flex flex-row align-items-end">
                        {{ form_row(resume_form.invites) }}
                        <div class="ps-4">
                            {{ form_row(resume_form.submit) }}
                        </div>
                    </div>
                    {{ form_end(resume_form) }}
                </div>
            {% endif %}
        {% endif %}

        <div>
            <h2 class="mt-4">Подходящие вакансии:</h2>
            <div class="p-0 pt-1 mb-3 ms-0 w-75 container d-flex flex-column ">
                {% for relevant_vacancy in relevant_vacancies|sort((a,b) => a.skills|length <=> b.skills|length)|sort((a,b) => a.salary <=> b.salary)|reverse %}
                    {% include 'vacancy/vacancyFullCard.html.twig' with {'vacancy': relevant_vacancy} %}
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}