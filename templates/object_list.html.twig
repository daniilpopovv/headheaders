{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="p-3 mb-3 container-sm">
        <h1 class="pb-3">{{ block('title') }}</h1>

        <div class="d-flex justify-content-between">
            <div class="w-50">
                {% for object in objects|sort((a,b) => a.salary <=> b.salary)|reverse|sort((a,b) => a.salary <=> b.salary) %}
                    {% include '_object_card_full.html.twig' with {'object': object} %}
                {% endfor %}
            </div>

            {% if search_form is defined %}
                {% include 'elements/_search.html.twig' with {'search_form': search_form} %}
            {% endif %}
        </div>

    </div>
{% endblock %}